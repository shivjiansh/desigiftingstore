rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Users can upload profile images
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Product images
    match /products/{productId}/{allPaths=**} {
      // Anyone can read product images
      allow read: if true;

      // Only authenticated sellers can upload product images
      allow write: if request.auth != null && 
        request.auth.token.role == 'seller' &&
        // Limit file size to 5MB
        request.resource.size < 5 * 1024 * 1024 &&
        // Only allow image files
        request.resource.contentType.matches('image/.*');
    }

    // Seller store assets (logos, banners)
    match /sellers/{sellerId}/{allPaths=**} {
      // Anyone can read seller assets
      allow read: if true;

      // Only the seller can upload their assets
      allow write: if request.auth != null && 
        request.auth.token.role == 'seller' &&
        request.auth.uid == sellerId &&
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }

    // Order attachments (customization files)
    match /orders/{orderId}/{allPaths=**} {
      // Only order participants can access
      allow read, write: if request.auth != null && (
        // Buyer who created the order
        request.auth.token.role == 'buyer' ||
        // Seller who received the order
        request.auth.token.role == 'seller'
      ) &&
      request.resource.size < 10 * 1024 * 1024; // 10MB for customization files
    }

    // Temporary uploads
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024;
    }
  }
}
